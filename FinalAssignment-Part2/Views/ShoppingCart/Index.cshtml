@model FinalAssignment_Part2.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}
@*Index.cshtml
    Naga Rimmalapudi 200277598 Chandra Reddy 200275643
    Display contents of shopping cart*@
<h3>
    <em>Review</em> your cart:
</h3>
<p class="button">
    @Html.ActionLink("Checkout >> ", "AddressAndPayment", "Checkout")
</p>
<div id="update-message">
</div>
<table>
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in
                        Model.CartItems)
    {
        <tr id="row-@item.RecordId">
            <td>
                @Html.ActionLink(item.ProductModel.ProductName, "Details", "ProductModel", new { id = item.ID }, null)
            </td>
            <td>
                @item.ProductModel.ProductPrice
            </td>
            <td id="item-count-@item.RecordId">
                @item.Count
            </td>
            <td>
                <a href="#" class="RemoveLink"
                   data-id="@item.RecordId">
                    Remove
                    from cart
                </a>
            </td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td></td>
        <td></td>
        <td id="cart-total">
            @Model.CartTotal
        </td>
    </tr>
</table>
